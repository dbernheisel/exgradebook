<!-- Enrollment Modal -->
<div class="modal fade" id="enrollment-form-modal" tabindex="-1" role="dialog" aria-labelledby="enrollmentModalLabel" aria-hidden="true">
  <%= form_for @conn, staff_enrollment_path(@conn, :create), fn _f -> %>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="enrollmentModalLabel">New Enrollmenet</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= label :enrollment, :student_id, class: "col-form-label" %>
          <%= select :enrollment, :student_id, student_options(@course.id), class: "form-control" %>
        </div>
      </div>
      <%= hidden_input :enrollment, :course_id, value: @course.id %>

      <div class="modal-footer">
        <div class="btn-group" role="group" aria-label="Actions">
          <button type="button" class="btn btn-dark" data-dismiss="modal">
            <i class="fas fa-window-close"></i>
            Close
          </button>
          <%= submit class: "btn btn-success" do %>
            <span>Enroll</span>
            <i class="fas fa-chevron-right"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div
