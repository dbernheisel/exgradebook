<h2>Show Staff</h2>

<ul>
  <li>
    <strong>First name:</strong>
    <%= @staff.first_name %>
  </li>

  <li>
    <strong>Last name:</strong>
    <%= @staff.last_name %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @staff.email %>
  </li>

  <li>
    <strong>Role:</strong>
    <%= @staff.role %>
  </li>
</ul>

<span><%= link "Edit", to: staff_user_path(@conn, :edit, @staff) %></span>
<span><%= link "Back", to: staff_user_path(@conn, :index) %></span>
